<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 1rem;
            background-color: #343a40;
            color: white;
        }

        .logout-link {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        .layout {
            display: flex;
            flex: 1;
        }

        .side-menu {
            width: 200px;
            background-color: #f8f9fa;
            padding: 1rem;
        }

        .side-menu ul {
            list-style: none;
            padding: 0;
        }

        .side-menu ul li {
            margin: 0.5rem 0;
        }

        .side-menu ul li a {
            text-decoration: none;
            color: #343a40;
            font-weight: bold;
        }

        .main-content {
            flex: 1;
            padding: 1rem;
            background-color: #fff;
        }

        footer {
            background-color: #f8f9fa;
            padding: 0.5rem 1rem;
            text-align: center;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <header>
        <h1>ExpenseApp</h1>
        <a class="logout-link" asp-area="" asp-controller="ExpenseLogin" asp-action="Logout">Logout</a>
    </header>
    <div class="layout">
        <nav class="side-menu">
            <ul>
                <li>
                    <a asp-area="" asp-controller="Expense" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Expense" asp-action="ExpenseGroupMaster">ExpenseGroup</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Expense" asp-action="ExpenseMemberMaster">GroupMember</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Expense" asp-action="Expense">Expense</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Expense" asp-action="ExpenseBalance">Balance</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Expense" asp-action="UserMaster">UserProfile</a>
                </li>
            </ul>
        </nav>
        <main class="main-content">
            @RenderBody()
        </main>
    </div>
    <footer>
        &copy; 2024 - StellarTechnologies - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
